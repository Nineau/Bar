*{
	margin: 0px;
	padding: 0px;
	font-family: Avenir, sans-serif;
}

nav{
	width: 100%;
	margin: 0px auto 40px auto;
	position: sticky;
	
}

nav ul{
	list-style-type: none;
}

nav li{
	float: left;
	width :25%;
text-align: center;}
	
nav ul: :after{
	content:" ";
	display: table;
	clear: both;
}

nav a{
	display: block;
	text-decoration: none;
	color: black;
	border-bottom: 2px solid transparent;
	padding: 10px 0px;
}

nav a:hover{
	color: orange;
	border-bottom: 2px solid;
}
